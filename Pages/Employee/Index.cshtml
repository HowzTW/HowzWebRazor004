@page
@model IndexModel
@{
    ViewData["Title"] = "員工資料維護";
}

<h2>@ViewData["Title"]</h2>
<h5>@Model.Message</h5>
<hr />
    
<div class="container-fluid">
  <!-- Content here -->


    
    <div class="row">
        <div class="col-sm">
            <div class="alert alert-warning" role="alert">
                共有 @Model.Employees.Count 筆員工資料 <a asp-page="/Employee/Add" class="btn btn-primary">新增</a>
            </div>
        </div>
    </div>

    
    @foreach (Employee employee in Model.Employees)
    {
    <div class="row">
        <div class="col-sm">
            <div class="alert alert-info" role="alert">
                <div class="col-sm-4 col-xs-12">
                    <div class="alert alert-info" role="alert">
                    <label asp-for="employee.Name">姓名：@employee.Name</label>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <div class="alert alert-info" role="alert">
                    <label asp-for="employee.PersonId">身分證號：@employee.PersonId</label>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <div class="alert alert-info" role="alert">
                    <label asp-for="employee.Password">密碼：@employee.Password</label>
                    </div>
                </div>
                <div class="col-sm-12 col-xs-12">
                    <input class="btn btn-primary" type="submit" value="新增">
                    <a asp-page="/Employee/Edit" asp-route-id="@employee.Id" class="btn btn-warning">修改</a>
                    <a asp-page="/Employee/Delete" asp-route-id="@employee.Id" class="btn btn-danger">刪除</a>
                </div>
            </div>
        </div>
    </div>
    }


    
</div>
